<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:orientation="vertical"
  >
    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dp_6.0"/>
<LinearLayout
   android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/dp_12.0"
    android:paddingBottom="@dimen/dp_10.0"
    android:orientation="horizontal"
    android:paddingRight="@dimen/dp_5.0">

    <View
        android:id="@+id/module_header_icon_view"
        android:layout_width="4dp"
        android:layout_height="14dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_15.0"/>
    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15.0"
        android:src="@drawable/ic_header_left"/>

    <TextView
        android:id="@+id/module_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15.0"
        android:layout_weight="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_17"
        tools:text=""/>

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textColor="@color/gray_999999"

        android:textSize="@dimen/text_size_12"
        android:visibility="visible"
        tools:text="更多"/>

    <TextView
        android:id="@+id/more_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:text=""
        android:textColor="@color/gray_969696"
        android:textSize="@dimen/text_size_12"
        android:visibility="gone"
        />
</LinearLayout>
    <View
        android:id="@+id/view_buttom"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dp_6.0"/>
    <View
        android:id="@+id/view_line_match"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_e6e6e6"/>
</LinearLayout>