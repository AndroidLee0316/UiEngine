<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60.0"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10.0"
            >

            <ImageView
                android:id="@+id/iv_main_head"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_life_fcfw" />

            <TextView
                android:id="@+id/module_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="房产服务"
                android:textColor="@color/black_333333"
                android:textSize="18sp"
                tools:text="房产服务" />


            <TextView
                android:id="@+id/more_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15.0"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:text=""
                android:textColor="@color/gray_969696"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone" />
        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_15.0"
    android:paddingRight="@dimen/dp_15.0"
    android:paddingBottom="@dimen/dp_15.0"
        android:visibility="gone"
   >
    <TextView
        android:id="@+id/tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="挂盘均价"
        android:textColor="@color/gray_999999"
        android:textSize="@dimen/text_size_12" />
    <TextView
        android:id="@+id/tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/tv_one"
        android:text="--"
        android:layout_marginLeft="@dimen/dp_5.0"
        android:textColor="@color/green_18C69F"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="--"
        android:layout_below="@id/tv_one"
        android:layout_marginTop="@dimen/dp_5.0"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_size_28" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_four"
        android:layout_marginTop="@dimen/dp_12.0"
        android:text="元/千米"
        android:layout_below="@id/tv_one"
        android:layout_marginLeft="@dimen/dp_10.0"
        android:layout_alignBaseline="@id/tv_four"
        android:textColor="@color/gray_999999"
        android:textSize="@dimen/text_size_12" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_zai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="在售新房楼盘数"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/text_size_12" />
        <TextView
            android:id="@+id/tv_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="--"
            android:layout_below="@id/tv_zai"
            android:layout_marginTop="@dimen/dp_5.0"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_size_28" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12.0"
            android:text="套"
            android:layout_below="@id/tv_zai"
            android:layout_marginLeft="@dimen/dp_8.0"
            android:textColor="@color/gray_999999"
            android:layout_alignBaseline="@id/tv_five"
            android:layout_toRightOf="@id/tv_five"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

</RelativeLayout>
    <ImageView
        android:id="@+id/iv_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140.0"
        android:layout_marginLeft="@dimen/dp_15.0"
        android:layout_marginRight="@dimen/dp_15.0"
        android:scaleType="fitXY"
        android:src="@drawable/bg_cs_house"
        />

</LinearLayout>