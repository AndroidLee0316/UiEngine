<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_12.0">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100.0"
        android:scaleType="fitXY"
        android:src="@drawable/home_bg_affair_header"/>
    <TextView
        android:id="@+id/tv_zai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在售新房楼盘数"
        android:visibility="gone"
        android:textColor="@color/black_333333"
        android:layout_marginTop="@dimen/dp_5.0"
        android:textSize="@dimen/text_size_12" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07月04日"
            android:textColor="@color/black_333333"
            android:layout_marginTop="@dimen/dp_12.0"
            android:textSize="@dimen/text_size_10" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23457"
            android:textColor="@color/black_333333"
            android:layout_marginTop="@dimen/dp_12.0"
            android:layout_marginLeft="@dimen/dp_4"
            android:textSize="@dimen/text_size_10" />

    </LinearLayout>

</LinearLayout>
