<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ResourceName"
    >

  <ImageView
      android:id="@+id/iconView"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_marginRight="8dp"
      android:src="@drawable/ic_circle_orange_education"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/textLayout"
      app:layout_constraintTop_toTopOf="parent"
      />

  <LinearLayout
      android:id="@+id/textLayout"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@id/iconView"
      app:layout_constraintRight_toLeftOf="@+id/arrowIconView"
      app:layout_constraintTop_toTopOf="parent"
      >
    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发现周边"
        android:textColor="#333333"
        android:textSize="15sp"
        />

    <View
        android:id="@+id/lingGapView"
        android:layout_width="1dp"
        android:layout_height="4dp"
        />

    <TextView
        android:id="@+id/descView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加油站、洗手间、照相馆等"
        android:textColor="#999999"
        android:textSize="12dp"
        />

  </LinearLayout>

  <ImageView
      android:id="@+id/arrowIconView"
      android:layout_width="12dp"
      android:layout_height="12dp"
      android:layout_marginLeft="8dp"
      android:src="@drawable/ic_arrow_right_lifemap"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/textLayout"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

</android.support.constraint.ConstraintLayout>

