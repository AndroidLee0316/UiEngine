<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15dp">


    <ImageView
        android:id="@+id/iv_left_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/mine_ic_feedback"
        android:visibility="visible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="#2f332f"
                android:textSize="17sp"
                tools:text="模块名字" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iv_right_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/black_666666"
                    android:textSize="@dimen/text_size_15"
                    android:visibility="visible"
                    tools:text="推荐app拿iphone大奖" />

                <ImageView
                    android:id="@+id/iv_right_arrow"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/mine_ic_user_head_arrow" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_width"
            android:layout_gravity="bottom"
            android:background="@color/divider" />
    </FrameLayout>
</LinearLayout>

