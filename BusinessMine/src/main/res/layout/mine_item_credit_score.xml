<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/mine_ic_personal_credit" />

    <TextView
        android:layout_marginTop="13dp"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black_222222"
        android:textSize="@dimen/text_size_17"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        tools:text="身份特征" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textColor="@color/blue_27a5f9"
        android:textSize="@dimen/text_size_10"
        android:id="@+id/tv_score"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        tools:text="90分" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textColor="@color/gray_969696"
        android:textSize="@dimen/text_size_13"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="身份认证信息、就业和各种行为留下与信dhsafjfhdsaklfjfjkdls用相关的个人记录，呈现出的相关身份特征；" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/common_line_width"
        android:background="@color/gray_dddddd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>