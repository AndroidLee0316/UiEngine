<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical"
    >

  <com.pasc.lib.widget.toolbar.PascToolbar
      android:id="@+id/top_bar"
      android:background="@color/white"
      app:back_icon="@drawable/temp_ic_back"
      app:enable_under_divider="true"
      app:support_translucent_status_bar="false"
      app:title="用户资料"
      app:title_text_color="@color/black_333333"
      app:under_divider_color="@color/gray_d5d5d5"
      style="@style/WhiteFontToolbar"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white_ffffff"
      android:divider="@drawable/mine_user_divider_line"
      android:orientation="vertical"
      android:paddingLeft="19dp"
      android:showDividers="middle"
      app:layout_constraintTop_toBottomOf="@id/top_bar"
      >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/tv_head"
          android:layout_width="wrap_content"
          android:layout_height="80dp"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical"
          android:paddingRight="19dp"
          android:text="头像"
          android:textColor="@color/meprofile_item_left_color"
          android:textSize="@dimen/left_textsize"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          />

      <com.makeramen.roundedimageview.RoundedImageView
          android:id="@+id/riv_head_logo"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_marginRight="28dp"
          android:layout_marginTop="10dp"
          android:background="@null"
          android:src="@drawable/mine_ic_head_default_logged"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="@id/tv_head"
          app:riv_corner_radius="30dp"
          />

      <ImageView
          android:layout_width="@dimen/dp_12"
          android:layout_height="@dimen/dp_12"
          android:layout_marginLeft="@dimen/dp_2.0"
          android:layout_marginRight="18dp"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical"
          android:src="@drawable/mine_ic_right_arrow"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="@+id/riv_head_logo"
          app:layout_constraintLeft_toRightOf="@id/riv_head_logo"
          app:layout_constraintTop_toTopOf="@+id/riv_head_logo"
          />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/tv_photo_num"
          android:layout_width="wrap_content"
          android:layout_height="48dp"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical"
          android:paddingRight="19dp"
          android:text="@string/mine_phone"
          android:textColor="@color/meprofile_item_left_color"
          android:textSize="@dimen/left_textsize"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          />

      <TextView
          android:id="@+id/tv_phone_number_value"
          android:layout_width="0dp"
          android:layout_height="48dp"
          android:layout_marginRight="@dimen/dp_27.0"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical|end"
          android:paddingLeft="10dp"
          android:singleLine="true"
          android:textColor="@color/meprofile_item_right_color"
          android:textSize="@dimen/right_textsize"
          app:layout_constraintLeft_toRightOf="@id/tv_photo_num"
          app:layout_constraintRight_toRightOf="parent"
          />

      <ImageView
          android:layout_width="@dimen/dp_12"
          android:layout_height="@dimen/dp_12"
          android:layout_marginRight="18dp"
          android:gravity="center_vertical"
          android:src="@drawable/mine_ic_right_arrow"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="@id/tv_phone_number_value"
          app:layout_constraintLeft_toRightOf="@id/tv_phone_number_value"
          app:layout_constraintTop_toTopOf="@id/tv_phone_number_value" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/tv_nickname"
          android:layout_width="wrap_content"
          android:layout_height="48dp"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical"
          android:paddingRight="19dp"
          android:text="@string/mine_nickname"
          android:textColor="@color/meprofile_item_left_color"
          android:textSize="@dimen/left_textsize"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          />

      <TextView
          android:id="@+id/tv_nickname_desc"
          android:layout_width="0dp"
          android:layout_height="48dp"
          android:layout_marginRight="@dimen/dp_27.0"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical|end"
          android:paddingLeft="10dp"
          android:singleLine="true"
          android:textColor="@color/meprofile_item_right_color"
          android:textSize="@dimen/right_textsize"
          app:layout_constraintLeft_toRightOf="@id/tv_nickname"
          app:layout_constraintRight_toRightOf="parent"
          />

      <ImageView
          android:layout_width="@dimen/dp_12"
          android:layout_height="@dimen/dp_12"
          android:layout_marginRight="18dp"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical"
          android:src="@drawable/mine_ic_right_arrow"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="@+id/tv_nickname_desc"
          app:layout_constraintLeft_toRightOf="@id/tv_nickname_desc"
          app:layout_constraintTop_toTopOf="@+id/tv_nickname_desc"
          />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="18dp"
        app:layout_constraintTop_toBottomOf="@id/view_portrait"
        >

      <TextView
          android:id="@+id/gender"
          android:layout_width="wrap_content"
          android:layout_height="48dp"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical"
          android:paddingRight="19dp"
          android:text="性别"
          android:textColor="@color/meprofile_item_left_color"
          android:textSize="@dimen/left_textsize"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          />

      <TextView
          android:id="@+id/gender_desc"
          android:layout_width="0dp"
          android:layout_height="48dp"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical|end"
          android:paddingLeft="19dp"
          android:textColor="@color/meprofile_item_right_color"
          android:textSize="@dimen/right_textsize"
          app:layout_constraintLeft_toRightOf="@id/gender"
          app:layout_constraintRight_toLeftOf="@+id/iv_gender_arrow"
          tools:text=""
          />

      <ImageView
          android:id="@+id/iv_gender_arrow"
          android:layout_width="@dimen/dp_12"
          android:layout_height="@dimen/dp_12"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical"
          android:src="@drawable/mine_ic_right_arrow"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="@+id/gender_desc"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="@+id/gender_desc"
          />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_portrait"
        >

      <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="48dp"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical"
          android:paddingRight="19dp"
          android:text="@string/mine_real_name"
          android:textColor="@color/meprofile_item_left_color"
          android:textSize="@dimen/left_textsize"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          />

      <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="48dp"
          app:layout_constraintLeft_toRightOf="@id/name"
          app:layout_constraintRight_toRightOf="parent"
          >

        <TextView
            android:id="@+id/name_desc"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_29.0"
            android:background="@color/white_ffffff"
            android:gravity="center_vertical|end"
            android:textColor="@color/gray_c7c7c7"
            android:textSize="@dimen/right_textsize"
            tools:text="sdfsdf"
            />

        <ImageView
            android:id="@+id/iv_name_arrow"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@color/white_ffffff"
            android:gravity="center_vertical"
            android:src="@drawable/mine_ic_right_arrow"
            android:visibility="visible"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingRight="19dp"
            >

          <TextView
              android:id="@+id/tv_name_value"
              android:layout_width="0dp"
              android:layout_height="48dp"
              android:layout_marginRight="@dimen/dp_8"
              android:layout_weight="1"
              android:background="@color/white_ffffff"
              android:gravity="center_vertical|end"
              android:text="王小二"
              android:textColor="@color/meprofile_item_right_color"
              android:textSize="@dimen/right_textsize"
              />

          <TextView
              android:id="@+id/tv_certification"
              android:layout_width="64dp"
              android:layout_height="18dp"
              android:layout_centerVertical="true"
              android:background="@drawable/mine_myprofile_certification_name"
              android:drawableLeft="@drawable/mine_ic_certification_name"
              android:gravity="center"
              android:paddingLeft="@dimen/dp_4"
              android:text="已实名"
              android:textColor="@color/theme_color"
              android:textSize="@dimen/text_size_12"
              />
        </LinearLayout>
      </RelativeLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="18dp"
        >

      <TextView
          android:id="@+id/identity"
          android:layout_width="wrap_content"
          android:layout_height="48dp"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical"
          android:paddingRight="19dp"
          android:text="@string/mine_identity_no"
          android:textColor="@color/meprofile_item_left_color"
          android:textSize="@dimen/left_textsize"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          />


      <TextView
          android:id="@+id/identity_desc"
          android:layout_width="0dp"
          android:layout_height="48dp"
          android:layout_alignParentRight="true"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical|end"
          android:textColor="@color/meprofile_item_right_color"
          android:textSize="@dimen/right_textsize"
          app:layout_constraintLeft_toRightOf="@id/identity"
          app:layout_constraintRight_toLeftOf="@+id/iv_identity_arrow"
          tools:text="sdfsdf"
          />
      <ImageView
          android:id="@+id/iv_identity_arrow"
          android:layout_width="@dimen/dp_12"
          android:layout_height="@dimen/dp_12"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical"
          android:src="@drawable/mine_ic_right_arrow"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="18dp"
        >

      <TextView
          android:id="@+id/address"
          android:layout_width="wrap_content"
          android:layout_height="48dp"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical"
          android:paddingRight="19dp"
          android:text="联系地址"
          android:textColor="@color/meprofile_item_left_color"
          android:textSize="@dimen/left_textsize"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <TextView
          android:id="@+id/address_desc"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/dp_27.0"
          android:background="@color/white_ffffff"
          android:drawablePadding="10dp"
          android:gravity="center_vertical|right"
          android:paddingBottom="10dp"
          android:paddingLeft="19dp"
          android:paddingTop="12.5dp"
          android:textColor="@color/meprofile_item_right_color"
          android:textSize="@dimen/right_textsize"
          app:layout_constraintLeft_toRightOf="@id/address"
          app:layout_constraintRight_toRightOf="parent"
          tools:text="xxxxxxxxxxxxxxxxx"
          />

      <ImageView
          android:id="@+id/iv_address_arrow"
          android:layout_width="@dimen/dp_12"
          android:layout_height="@dimen/dp_12"
          android:background="@color/white_ffffff"
          android:gravity="center_vertical"
          android:src="@drawable/mine_ic_right_arrow"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
    </android.support.constraint.ConstraintLayout>
  </LinearLayout>

  <android.support.constraint.ConstraintLayout
      android:id="@+id/view_extend"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp_12"
      android:background="@color/white"
      >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="19dp"
        android:background="@color/white_ffffff"
        android:gravity="center_vertical"
        android:paddingRight="19dp"
        android:text="我的企业"
        android:textColor="@color/meprofile_item_left_color"
        android:textSize="@dimen/left_textsize"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/iv_company_arrow"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_marginRight="18dp"
        android:background="@color/white_ffffff"
        android:gravity="center_vertical"
        android:src="@drawable/mine_ic_right_arrow"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
  </android.support.constraint.ConstraintLayout>
</LinearLayout>


