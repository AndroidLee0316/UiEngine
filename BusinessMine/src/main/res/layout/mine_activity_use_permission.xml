<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical"
    >

  <com.pasc.lib.widget.toolbar.PascToolbar
      android:id="@+id/activity_up_title"
      style="@style/WhiteFontToolbar"
      android:background="@color/white"
      app:back_icon="@drawable/temp_ic_back"
      app:enable_under_divider="true"
      app:support_translucent_status_bar="false"
      app:title_text_color="@color/black_333333"
      app:under_divider_color="@color/gray_d5d5d5"
      app:title="@string/mine_use_permission"
      />

  <TextView
      android:id="@+id/activity_up_hint"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dp_12"
      android:layout_marginLeft="@dimen/dp_15"
      android:layout_marginRight="@dimen/dp_15"
      android:layout_marginTop="@dimen/dp_24"
      android:text="@string/mine_use_pemission_hint"
      android:textColor="@color/gray_999999"
      android:textSize="@dimen/text_size_13"
      />

  <com.pasc.business.mine.widget.ItemUsePermissionView
      android:id="@+id/activity_up_permission_location"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_0.5"
      android:layout_marginLeft="@dimen/dp_15"
      android:background="@color/gray_e8e8e8"
      />

  <com.pasc.business.mine.widget.ItemUsePermissionView
      android:id="@+id/activity_up_permission_camera"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_0.5"
      android:layout_marginLeft="@dimen/dp_15"
      android:background="@color/gray_e8e8e8"
      />

  <com.pasc.business.mine.widget.ItemUsePermissionView
      android:id="@+id/activity_up_permission_contact"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_0.5"
      android:layout_marginLeft="@dimen/dp_15"
      android:background="@color/gray_e8e8e8"
      />

  <com.pasc.business.mine.widget.ItemUsePermissionView
      android:id="@+id/activity_up_permission_callphone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_0.5"
      android:layout_marginLeft="@dimen/dp_15"
      android:background="@color/gray_e8e8e8"
      />

  <com.pasc.business.mine.widget.ItemUsePermissionView
      android:id="@+id/activity_up_permission_photo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_0.5"
      android:layout_marginLeft="@dimen/dp_15"
      android:background="@color/gray_e8e8e8"
      />

  <com.pasc.business.mine.widget.ItemUsePermissionView
      android:id="@+id/activity_up_permission_microphone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

</LinearLayout>