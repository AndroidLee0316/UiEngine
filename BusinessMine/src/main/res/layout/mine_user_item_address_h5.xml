<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:paddingBottom="@dimen/dp_11.0">

    <ImageView
        android:id="@+id/iv_default_address"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mine_user_default_address"
        android:layout_marginLeft="@dimen/dp_15.0"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_toRightOf="@id/iv_default_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15.0">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginRight="@dimen/dp_15.0"
            android:text="18823210089"
            android:textColor="@color/black_333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_12.0"
            android:layout_toLeftOf="@id/tv_phone"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="@dimen/dp_15.0"
            android:text="张楚涵"
            android:textColor="@color/black_333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_4.0"
            android:text="[默认地址]"
            android:textColor="@color/user_theme_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_4.0"
            android:layout_toRightOf="@id/tv_default"
            android:text="江苏省南通市崇川区工农南路150号"
            android:textColor="@color/gray_969696"
            android:textSize="13sp" />

    </RelativeLayout>
    <View
        android:id="@+id/v_divider"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/dp_10.0"
        android:layout_below="@id/rl_address"
        android:background="@color/gray_d5d5d5"
        android:layout_marginLeft="@dimen/dp_15.0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"/>
</RelativeLayout>