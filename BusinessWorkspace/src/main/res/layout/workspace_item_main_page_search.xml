<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/workspace_bg_default_image_color" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/tv_action_02"
        android:layout_toRightOf="@+id/iv_left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_17"
            tools:text="社保网点" />

        <TextView
            android:id="@+id/tv_department_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:textColor="#969696"
            android:textSize="@dimen/text_size_13"
            tools:text="社保网点" />

    </LinearLayout>


    <com.pasc.lib.widget.roundview.RoundTextView
        android:id="@+id/tv_action_02"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_action_01"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="预约"
        android:textColor="#4d73f4"
        android:visibility="gone"
        app:rv_cornerRadius="3dp"
        app:rv_strokeColor="#4d73f4"
        app:rv_strokeWidth="0.5dp" />

    <com.pasc.lib.widget.roundview.RoundTextView
        android:id="@+id/tv_action_01"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="查询"
        android:textColor="#4d73f4"
        android:visibility="gone"
        app:rv_cornerRadius="3dp"
        app:rv_strokeColor="#4d73f4"
        app:rv_strokeWidth="0.5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:background="#e8e8e8" />
</RelativeLayout>