<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/workspace_bg_water_card"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:src="@drawable/workspace_bg_water_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/workspace_bg_water">

                <LinearLayout
                    android:id="@+id/ll_quality_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_today_water_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优"
                        android:textColor="#40a9ff"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:id="@+id/tv_current_data_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日水质"
                        android:textColor="#40a9ff"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/workspace_bg_water_left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_turbidity_national_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="浑浊度(国家标准限制≤1NTU)"
                    android:textColor="#969696"
                    android:textSize="@dimen/text_size_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/ll_chong_hai_water_plant_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_chong_hai_water_plant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.19"
                            android:textColor="#333333"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/tv_chong_hai_water_plant_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="崇海水厂"
                            android:textColor="#333333"
                            android:textSize="@dimen/text_size_12" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/common_line_width"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@android:color/transparent" />

                    <LinearLayout
                        android:id="@+id/ll_wolf_landscape_factory_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_wolf_landscape_factory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.19"
                            android:textColor="#333333"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/tv_wolf_landscape_factory_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="狼山水厂"
                            android:textColor="#333333"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/common_line_width"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@android:color/transparent" />

                    <LinearLayout
                        android:id="@+id/ll_hong_gang_water_plant_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_hong_gang_water_quality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="0.19"
                            android:textColor="#333333"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/tv_hong_gang_water_quality_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="洪港水厂"
                            android:textColor="#333333"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>

