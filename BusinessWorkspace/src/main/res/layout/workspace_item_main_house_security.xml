<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

  <View
      android:layout_width="15dp"
      android:layout_height="match_parent"
      android:background="@drawable/workspace_bg_main_page_rtl_divider"
      />

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="@drawable/workspace_bg_today_water_quality_container"
      android:orientation="vertical"
      android:paddingBottom="12dp"
      android:paddingTop="12dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/tv_house_price_per_square_meter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10211"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="元/平方米"
            android:textColor="#969696"
            android:textSize="@dimen/text_size_10"
            />
      </LinearLayout>


      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="20dp"
          android:layout_weight="1"
          android:gravity="right"
          android:orientation="horizontal"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="30天环比"
            android:textColor="#969696"
            android:textSize="@dimen/text_size_10"
            />

        <TextView
            android:id="@+id/tv_house_price_trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="0.88%"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_24"
            />

        <ImageView
            android:id="@+id/iv_house_price_trend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="true"
            android:src="@drawable/workspace_ic_main_page_house_price_trend_up"
            />

      </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:layout_weight="1"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/tv_house_new_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="86"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="在售新房楼盘数"
            android:textColor="#6a6a6a"
            android:textSize="@dimen/text_size_12"
            />

      </LinearLayout>

      <View
          android:layout_width="@dimen/common_line_width"
          android:layout_height="20dp"
          android:layout_gravity="center_vertical"
          android:layout_marginTop="3dp"
          android:background="#e8e8e8"
          />

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:layout_weight="1"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/tv_house_module_up_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="6"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="均价上涨板块数"
            android:textColor="#6a6a6a"
            android:textSize="@dimen/text_size_12"
            />

      </LinearLayout>

      <View
          android:layout_width="@dimen/common_line_width"
          android:layout_height="20dp"
          android:layout_gravity="center_vertical"
          android:layout_marginTop="3dp"
          android:background="#e8e8e8"
          />

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:layout_weight="1"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/tv_house_module_down_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="1"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="均价下跌板块数"
            android:textColor="#6a6a6a"
            android:textSize="@dimen/text_size_12"
            />

      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

  <View
      android:layout_width="15dp"
      android:layout_height="match_parent"
      android:background="@drawable/workspace_bg_main_page_ltr_divider"
      />

</LinearLayout>

